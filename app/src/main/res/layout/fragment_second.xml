<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondFragment">


    <TextView
        android:id="@+id/textView01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:text="Recuerda que para que la contraseña sea segura debe cumplir con estas características"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="> Al menos 5 caracteres"
        app:layout_constraintStart_toStartOf="@id/textView01"
        app:layout_constraintTop_toBottomOf="@+id/textView01"
        app:layout_constraintEnd_toEndOf="@id/textView01"/>

    <TextView
        android:id="@+id/textView03"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="> Al menos 1 letra mayúscula"
        app:layout_constraintStart_toStartOf="@id/textView02"
        app:layout_constraintTop_toBottomOf="@+id/textView02"
        app:layout_constraintEnd_toEndOf="@id/textView02"/>

    <TextView
        android:id="@+id/textView04"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Otras características que hacen la contraseña más segura:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textView03"
        app:layout_constraintTop_toBottomOf="@+id/textView03"
        app:layout_constraintEnd_toEndOf="@id/textView03"/>

    <TextView
        android:id="@+id/textView05"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="> Al menos 1 caracter especial (como # $ @)"
        app:layout_constraintStart_toStartOf="@id/textView04"
        app:layout_constraintTop_toBottomOf="@+id/textView04"
        app:layout_constraintEnd_toEndOf="@id/textView04"/>

    <TextView
        android:id="@+id/textView06"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="> Al menos 1 número"
        app:layout_constraintStart_toStartOf="@id/textView05"
        app:layout_constraintTop_toBottomOf="@+id/textView05"
        app:layout_constraintEnd_toEndOf="@id/textView05"/>

</androidx.constraintlayout.widget.ConstraintLayout>